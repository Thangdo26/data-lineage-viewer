# Dockerfile for API server
FROM node:18-alpine

WORKDIR /app

# Copy server files
COPY server/package*.json ./server/
RUN cd server && npm install --production

COPY server/ ./server/

# Create public directory (will be mounted as volume)
RUN mkdir -p /app/public

WORKDIR /app/server

EXPOSE 3000

CMD ["node", "server.js"]
